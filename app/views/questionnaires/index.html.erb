<%  @page_title = "回答一覧" %>
<h1><%=  @page_title %></h1>

<% if @questionnaires.present? %>
<table class="list">
  <tr>
    <th>番号</th>
    <th>氏名</th>
    <th>性別</th>
    <th>ご意見・ご要望</th>
  </tr>
  <% @questionnaires.each do |questionnaire| %>
  <tr>
    <td style="text-align: right"><%= questionnaire.id %></td>
    <td><%= questionnaire.full_name %></td>
    <td><%= questionnaire.gender %></td>
    <td><%= questionnaire.comment %></td>
  </tr>
  <% end %>
</table>
<% else %>
<p>回答情報がありません。</p>
<% end %>
